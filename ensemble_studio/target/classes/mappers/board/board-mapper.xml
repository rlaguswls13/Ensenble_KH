<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="boardMapper">
  	
  	<!-- 게시판 종류 resultMap -->
	<resultMap type="Type" id="type_rm">
		<id property="typeNo" column="BOARD_TYPE_NO" />
		<id property="boardCTNo" column="BOARD_CT_NO" />
	
		<result property="boardName" column="BOARD_NAME" />
		<result property="boardCTNm" column="BOARD_CT_NM" />
	</resultMap>
  	
  	<!-- 게시글 resultMap -->
	<resultMap type="Board" id="board_rm">
		<id property="boardNo" column="BOARD_NO" />

		<result property="boardDT" column="BOARD_DT" />
		<result property="boardMT" column="BOARD_MT" />
		<result property="boardStatus" column="BOARD_STATUS" />
		<result property="boardTitle" column="BOARD_TITLE" />
		<result property="boardReadCount" column="BOARD_READ_COUNT" />
		<result property="boardContent" column="BOARD_CONTENT" />
		
		<result property="boardTypeNo" column="BOARD_TYPE_NO" />
		<result property="boardNm" column="BOARD_NAME" />
		<result property="boardCTNo" column="BOARD_CT_NO" />
		<result property="boardCTNm" column="BOARD_CT_NM" />
		
		<result property="memberNo" column="MEMBER_NO" />
		<result property="memberNk" column="MEMBER_NICK" />
		
		
	</resultMap>
	
	<!-- 파일 정보 resultMap -->
	<resultMap type="Attachment" id="attachment_rm">
		<id property="attachmentNo" column="BOARD_AT_NO"/>
		<result property="attachmentLv" column="BOARD_AT_PATH"/>
		<result property="attachmentPath" column="BOARD_AT_NM"/>
		<result property="attachmentName" column="BOARD_AT_LV"/>
		<result property="boardNo" column="BOARD_NO"/>
	</resultMap>
		
	<!-- Pagination용 resultMap -->
 	<resultMap type="Pagination" id="pg_rm">
 		<result property="listCount"  column="CNT"/>
 		<result property="boardName"  column="BOARD_NAME"/>
 	</resultMap>
	
	<!-- 게시글 전체 게시글 수 조회 -->
	<select id="getListCount" parameterType="_int" resultMap="pg_rm">
		SELECT CNT,
			(SELECT BOARD_NAME FROM BOARD_TYPE
				WHERE BOARD_TYPE_NO = #{boardTypeNo} AND BOARD_CT_NO = 1) BOARD_NAME
		FROM (SELECT COUNT(*) CNT FROM BOARD_LIST
				WHERE BOARD_TYPE_NO = #{boardTypeNo} AND BOARD_STATUS = 'Y')
	</select>
	
	<!-- 게시글 목록 조회 -->
	<select id="selectBoardList" parameterType="_int" resultMap="board_rm">
		SELECT * FROM BOARD_LIST
		WHERE BOARD_STATUS = 'Y'
		AND
		BOARD_TYPE_NO = #{boardType}
		ORDER BY BOARD_NO DESC
	</select>
	
</mapper>
